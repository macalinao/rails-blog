<h1><%= @article.title %></h1>
<p><%= link_to 'Edit', edit_article_path %></p>
<p><%= link_to 'Delete', article_path, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<p><%= @article.text %></p>

<h2>Comments</h2>

<% @article.comments.each do |comment| %>
  <p><strong><%= comment.commenter %>:</strong> <%= comment.body %></p>
<% end %>

<h3>Write a response...</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
